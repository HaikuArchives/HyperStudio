	main.cpp
	AboutWindow.cpp
	AddAudioTrackWindow.cpp
	AppIconMenu.cpp
	HyperionApp.cpp
	MainWindow.cpp
	NewProjectWindow.cpp

	# transport
	TransportWindow.cpp
	TransportView.cpp
	TransportButton.cpp
