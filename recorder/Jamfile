	# project
#	ProjectView.cpp
#	ScaleSlider.cpp
	TimelineView.cpp
#	TrackView.cpp
#	TracksPanelsView.cpp
#	TracksView.cpp
	: be tracker $(TARGET_LIBSTDC++) libcore.a libui.a
	: Hyperion.rdef
;
