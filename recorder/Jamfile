SubDir TOP recorder ;

SubDirHdrs [ FDirName $(TOP) ] ;

local sourceDirs =
	transport
	project
;

local sourceDir ;
for sourceDir in $(sourceDirs) {
	SEARCH_SOURCE += [ FDirName $(TOP) recorder $(sourceDir) ] ;
}

