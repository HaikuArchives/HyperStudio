	gui/beos/project/ProjectView.cpp
	#gui/beos/project/ScaleSlider.cpp
	gui/beos/project/TimeLineView.cpp
	gui/beos/project/TrackView.cpp
	gui/beos/project/TracksPanelsView.cpp
	gui/beos/project/TracksView.cpp ;

if $(FAMILY) = BEOS
{
	# Sources and resources
	SRCS = $(CORE_SRC) $(BEOS_SRC) ;
	RSRCS = $(NAME).rsrc ;
}

include Jamfile-engine ;

# Add binary package
Package $(NAME)-$(VERSION)-$(PLATFORM).zip : $(NAME) ; 
PACKAGES += $(NAME)-$(VERSION)-$(PLATFORM).zip ;

# Packages
NotFile package ;
Depends package : $(PACKAGES) ;
