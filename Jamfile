
SubDir TOP ;

CORE_SRC = core/Track.cpp core/TimeLine.cpp core/Project.cpp ;

BEOS_BIN = Hyperion ;
#BEOS_SRC = [ glob-tree gui/ : *.cpp ] ;
BEOS_SRC = gui/AboutWindow.cpp gui/AddAudioTrackWindow.cpp gui/AppIconMenu.cpp gui/HyperionApp.cpp gui/MainWindow.cpp gui/NewProjectWindow.cpp gui/main.cpp gui/project/ProjectView.cpp gui/project/TimeLineView.cpp gui/project/TrackView.cpp gui/project/TracksView.cpp ;

if $(OS) = BeOS
{
	Main Hyperion : $(CORE_SRC) $(BEOS_SRC) ; 
	BeOSPackage Hyperion-$(HYPERION_VERSION)-$(OS).zip : Hyperion ; 
	HYPERION_PACKAGES += Hyperion-$(HYPERION_VERSION)-$(OS).zip ;
}

if $(OS) = Haiku
{
	Main Hyperion : $(CORE_SRC) $(BEOS_SRC) ; 
	BeOSPackage Hyperion-$(HYPERION_VERSION)-$(OS).zip : Hyperion ; 
	HYPERION_PACKAGES += Hyperion-$(HYPERION_VERSION)-$(OS).zip ;
}

# Packages
NotFile package ;
Depends package : $(HYPERION_PACKAGES) ;
